<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <include layout="@layout/toolbar"/>

    <EditText android:id="@+id/note_record_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="TITLE"
        android:textColorHint="@color/colorPrimary_transparent"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:background="#ACBCCC"
        android:padding="8dp"
        android:layout_margin="6dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/mic_dark_2"
        android:scaleType="fitCenter" />

    <TextView android:id="@+id/timeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="8dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:visibility="invisible"/>

    <Button android:id="@+id/note_record_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:layout_margin="6dp"
        android:text="RECORD"
        android:textSize="28sp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/start_bg"/>

</LinearLayout>